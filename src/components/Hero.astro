<script>
    window.addEventListener("load", function() {
        const hero = document.querySelector(".scrollable");
        //const scrollbarThumb = document.querySelector(".scrollbar-thumb");

        hero.nextElementSibling.style.setProperty('--thumb-width', window.innerWidth / hero.scrollWidth * 100 +"%");
        console.log(window.innerWidth / hero.scrollWidth * 100 +"%")

        hero.onscroll = function() {
            hero.nextElementSibling.style.setProperty('--thumb-x-pos', hero.scrollLeft / window.innerWidth * 100 +"%");
        };
    });
</script>

