---
    const response = await fetch("https://api.github.com/users/musca/repos");
    const repos = await response.json();
---

<div class="test">
    <section>
        <img src={repos[0].owner.avatar_url} width="100" height="100">
        <h2>Github repos</h2>
        {repos.map((repo) => (
        <article>
            <h1>{repo.name}</h1>
            <p>{repo.description}</p>
            <a href={repo.html_url}>Read more</a>
        </article>
        ))}
    </section>
</div>
<style>
    .test {
        background-color: #fff;
    }
    .test section {
        background-color: #fff;
    }
</style>